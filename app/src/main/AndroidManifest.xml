<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flood_android">
    <!-- 네트워크 허용 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_flood"
        android:label="Flood"
        android:roundIcon="@mipmap/ic_launcher_flood_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.myprofile.CenterActivity"></activity>
        <activity android:name=".ui.myprofile.InviteActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.myprofile.AlarmSetActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.myprofile.PasswordSetActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.myprofile.MyProfileEditActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.mypage.MypageMypostActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.companydetail.CompanyDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.feed.PhotoZoomActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.postnourl.PostNoUrlActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.bookmarkedit.BookmarkEditActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.feed.WebViewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.feed.FeedDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.signup.SignupActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait">
        <activity android:name=".ui.myflip.MyFlipDetailActivity"></activity>
        <activity android:name=".ui.myprofile.CenterActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.post.PostActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>