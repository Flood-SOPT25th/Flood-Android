<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flood_android">
    <!-- 네트워크 허용 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_flood"
        android:label="Flood"
        android:roundIcon="@mipmap/ic_launcher_flood_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.myprofile.CenterActivity"></activity>
        <activity android:name=".ui.myprofile.InviteActivity" />
        <activity android:name=".ui.myprofile.AlarmSetActivity" />
        <activity android:name=".ui.myprofile.PasswordSetActivity" />
        <activity android:name=".ui.myprofile.MyProfileEditActivity" />
        <activity android:name=".ui.mypage.MypageMypostActivity" />
        <activity android:name=".ui.companydetail.CompanyDetailActivity" />
        <activity android:name=".ui.feed.PhotoZoomActivity" />
        <activity android:name=".ui.postnourl.PostNoUrlActivity" />
        <activity android:name=".ui.bookmarkedit.BookmarkEditActivity" />
        <activity android:name=".ui.feed.WebViewActivity" />
        <activity android:name=".ui.feed.FeedDetailActivity" />
        <activity android:name=".ui.signup.SignupActivity" />
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity" /> <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.MAIN" /> -->
        <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
        <!-- </intent-filter> -->
        <activity android:name=".ui.post.PostActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>