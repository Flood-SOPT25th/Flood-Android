<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_first_login_withoutgroupcode1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:lineSpacingExtra="15sp"
        android:fontFamily="@font/notosanscjkkrbold"
        android:text="조직생성하기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="126dp"
        app:layout_constraintTop_toBottomOf="@id/tv_first_login_withoutgroupcode1_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/tv_first_login_withoutgroupcode1_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:lineSpacingExtra="6sp"
            android:fontFamily="@font/notosanscjkkrregular"
            android:text="조직명*"
            android:textColor="#707070"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtxt_first_login_withoutgroupcode1_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:background="@null"
            android:hint="FLOOD"
            android:fontFamily="@font/gilroyextrabold"
            android:lineSpacingExtra="4sp"
            android:textColorHint="#ededed"
            android:textColor="#282828"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_first_login_withoutgroupcode1_group_name" />

        <View
            android:id="@+id/lv_first_login_withoutgroupcode1_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#ededed"
            android:layout_marginTop="9.7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtxt_first_login_withoutgroupcode1_group_name"
            />

        <TextView
            android:id="@+id/tv_first_login_withoutgroupcode1_group_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조직 전화번호"
            android:fontFamily="@font/notosanscjkkrregular"
            android:layout_marginTop="21.3dp"
            android:layout_marginStart="1dp"
            android:lineSpacingExtra="6sp"
            android:textColor="#707070"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lv_first_login_withoutgroupcode1_1" />

        <EditText
            android:id="@+id/edtxt_first_login_withoutgroupcode1_group_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:background="@null"
            android:hint="010-0000-0000"
            android:fontFamily="@font/gilroyextrabold"
            android:lineSpacingExtra="4sp"
            android:textColorHint="#ededed"
            android:textColor="#282828"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_first_login_withoutgroupcode1_group_contact" />

        <View
            android:id="@+id/lv_first_login_withoutgroupcode1_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            android:layout_marginTop="9.7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtxt_first_login_withoutgroupcode1_group_contact"
            />

        <TextView
            android:id="@+id/tv_first_login_withoutgroupcode1_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직무*"
            android:fontFamily="@font/notosanscjkkrregular"
            android:layout_marginTop="21.3dp"
            android:layout_marginStart="1dp"
            android:lineSpacingExtra="6sp"
            android:textColor="#707070"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lv_first_login_withoutgroupcode1_2" />

        <TextView
            android:id="@+id/tv_first_login_withoutgroupcode1_job_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:background="@null"
            android:hint="직무 선택하기"
            android:windowSoftInputMode = "stateHidden|adjustPan"
            android:fontFamily="@font/gilroyextrabold"
            android:lineSpacingExtra="4sp"
            android:textColorHint="#ededed"
            android:textColor="#282828"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_first_login_withoutgroupcode1_job" />

        <View
            android:id="@+id/lv_first_login_withoutgroupcode1_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            android:layout_marginTop="9.7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_first_login_withoutgroupcode1_job_2"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>