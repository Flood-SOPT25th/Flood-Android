<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.SignupActivity">

    <ImageButton
        android:id="@+id/imgbtn_signup_left_arrow"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@android:color/background_light"
        android:layout_marginStart="14dp"
        android:src="@mipmap/signup_left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbtn_signup_x_black"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="18dp"
        android:background="@android:color/background_light"
        android:src="@mipmap/signup_x_black"
        app:layout_constraintTop_toTopOf="@id/imgbtn_signup_left_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/lv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="56dp"
        android:background="#ededed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/iv_signup_circle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/lv_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/circle_blue_7dp" />

    <ImageView
        android:id="@+id/iv_signup_circle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/lv_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_signup_circle1"
        app:srcCompat="@drawable/circle_grey_7dp" />

    <ImageView
        android:id="@+id/iv_signup_circle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/lv_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_signup_circle2"
        app:srcCompat="@drawable/circle_grey_7dp" />

    <ImageView
        android:id="@+id/iv_signup_circle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/lv_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_signup_circle3"
        app:srcCompat="@drawable/circle_grey_7dp" />


    <Button
        android:id="@+id/btn_signup_next"
        android:layout_width="34dp"
        android:layout_height="27dp"
        android:layout_marginEnd="24dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/notosanscjkkrmedium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="9sp"
        android:shadowColor="#00FFFFFF"
        android:text="다음"
        android:textColor="#d1d1d1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/lv_line"
        style="?android:attr/borderlessButtonStyle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>