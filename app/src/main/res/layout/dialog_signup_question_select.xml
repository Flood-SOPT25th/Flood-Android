<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_signup_dialog_question"
        android:layout_width="match_parent"
        android:layout_height="387dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rect_white_12dp_top" />

    <View
        android:id="@+id/lv_signup_dialog_question"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="56dp"
        android:background="#d1d1d1"
        app:layout_constraintTop_toTopOf="@id/iv_signup_dialog_question" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cstlay_signup_question_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/lv_signup_dialog_question"
        app:layout_constraintEnd_toEndOf="@id/iv_signup_dialog_question"
        app:layout_constraintStart_toStartOf="@id/iv_signup_dialog_question"
        app:layout_constraintTop_toTopOf="@id/iv_signup_dialog_question">

        <TextView
            android:id="@+id/tv_signup_dialog_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkrbold"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:text="회원가입 질문"
            android:textColor="#282828"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_signup_dialog_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:background="@null"
            android:fontFamily="@font/notosanscjkkrbold"
            android:paddingStart="10dp"
            android:text="완료"
            android:textColor="#d1d1d1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cstlay_signup_question_dialog_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lv_signup_dialog_question">

        <NumberPicker
            android:id="@+id/numpick_signup_question_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/numberpickercustom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>