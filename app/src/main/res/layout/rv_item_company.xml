<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_company"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_rv_item_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:cardCornerRadius="21dp"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@+id/cl_rv_item_company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_rv_item_company_img"
            android:layout_width="match_parent"
            android:layout_height="207dp" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rv_item_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_rv_item_company"
        app:layout_constraintStart_toStartOf="@+id/iv_rv_item_company">
        <ImageView
            android:id="@+id/iv_rv_item_company_logo_background"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/circle_gray_46dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/iv_rv_item_company_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/img_user"
            app:layout_constraintTop_toTopOf="@+id/iv_rv_item_company_logo_background"
            app:layout_constraintStart_toStartOf="@+id/iv_rv_item_company_logo_background"
            app:layout_constraintBottom_toBottomOf="@+id/iv_rv_item_company_logo_background"
            app:layout_constraintEnd_toEndOf="@+id/iv_rv_item_company_logo_background"/>

        <TextView
            android:id="@+id/tv_rv_item_company_name"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="11dp"
            android:fontFamily="@font/notosanscjkkrbold"
            android:includeFontPadding="false"
            android:text="기업 명"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_rv_item_company_logo"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_company_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cl_rv_item_company"
        app:layout_constraintTop_toBottomOf="@+id/cl_rv_item_company">

        <TextView
            android:id="@+id/tv_rv_item_company_category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_white_gray_11dp"
            android:fontFamily="@font/notosanscjkkrmedium"
            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="카테고리1"
            android:textAlignment="center"
            android:textColor="@color/colorGrayD1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rv_item_company_category2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rect_white_gray_11dp"
            android:fontFamily="@font/notosanscjkkrmedium"
            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="카테고리2"
            android:textColor="@color/colorGrayD1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_rv_item_company_category1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rv_item_company_category3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rect_white_gray_11dp"
            android:fontFamily="@font/notosanscjkkrmedium"
            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="카테고리3"
            android:textColor="@color/colorGrayD1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_rv_item_company_category2"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>