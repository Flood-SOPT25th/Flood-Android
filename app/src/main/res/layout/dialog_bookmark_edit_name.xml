<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:cardCornerRadius="12dp"
    tools:context=".ui.bookmarkedit.BookmarkEditActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_bookmark_edit_name_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="27sp"
            android:text="카테고리 이름 입력"
            android:textColor="#282828"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_bookmark_edit_name_dialog"
            android:layout_width="277dp"
            android:layout_height="47dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/rect_white_gray_24dp"
            android:gravity="center"
            android:hint="FLOOD"
            android:textColorHint="#ededed"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_edit_name_dialog_title"/>
        <TextView
            android:id="@+id/btn_bookmark_edit_name_dialog_cancel"
            android:layout_width="130dp"
            android:layout_height="47dp"
            android:text="취소"
            android:textSize="14sp"
            android:textColor="#a3a3a3"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:background="@drawable/rect_gray_24dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_bookmark_edit_name_dialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/btn_bookmark_edit_name_dialog_ok"
            android:layout_width="130dp"
            android:layout_height="47dp"
            android:text="확인"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginRight="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/rect_blue_24dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_bookmark_edit_name_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>