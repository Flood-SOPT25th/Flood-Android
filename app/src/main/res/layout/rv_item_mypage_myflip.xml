<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_rv_item_mypage_myflip"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/mypage_myflip_ar" />

    <TextView
        android:id="@+id/tv_rv_item_mypage_myflip_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/notosanscjkkrbold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/colorBlack28"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/iv_rv_item_mypage_myflip"
        app:layout_constraintTop_toBottomOf="@id/iv_rv_item_mypage_myflip"
        tools:text="AR" />

    <TextView
        android:id="@+id/tv_rv_item_mypage_flipnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/notosanscjkkrbold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/colorGrayD1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_rv_item_mypage_myflip_category"
        app:layout_constraintTop_toBottomOf="@id/iv_rv_item_mypage_myflip"
        tools:text="1 flips" />

</androidx.constraintlayout.widget.ConstraintLayout>