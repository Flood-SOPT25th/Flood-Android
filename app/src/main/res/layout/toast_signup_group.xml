<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    android:background="@drawable/rect_white_31dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 조직을 생성하지 않았나요?"
        android:fontFamily="@font/notosanscjkkrbold"
        android:textSize="14sp"
        android:textColor="#282828"
        android:lineSpacingExtra="6sp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/iv_toast_signup_group"
        app:layout_constraintTop_toTopOf="@id/iv_toast_signup_group"
        app:layout_constraintBottom_toBottomOf="@id/iv_toast_signup_group"
        />

    <ImageView
        android:id="@+id/iv_toast_signup_group"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_group"
        />

</androidx.constraintlayout.widget.ConstraintLayout>