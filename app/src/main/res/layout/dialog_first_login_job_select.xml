<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/rect_white_12dp_top">

    <View
        android:id="@+id/lv_first_login_dialog_job_select"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d1d1d1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cstlay_first_login_dialog_job_select_1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cstlay_first_login_dialog_job_select_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/lv_first_login_dialog_job_select">

        <TextView
            android:id="@+id/tv_first_login_dialog_job_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkrbold"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:text="직무 선택하기"
            android:includeFontPadding="false"
            android:textColor="#282828"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_first_login_dialog_job_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:background="@null"
            android:fontFamily="@font/notosanscjkkrbold"
            android:paddingStart="10dp"
            android:text="완료"
            android:textColor="#0057ff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cstlay_first_login_dialog_2_job_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lv_first_login_dialog_job_select">

        <com.flood_android.ui.signup.CustomNumberpicker
            android:id="@+id/numpick_first_login_dialog_job_select"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:includeFontPadding="false"
            android:theme="@style/numberpickercustom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>